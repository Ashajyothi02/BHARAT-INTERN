<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Blog</title>
</head>
<body>
    <h1>Blog Posts</h1>
    <a href="/new">Create New Post</a>
    <ul>
        <% posts.forEach(post => { %>
            <li><a href="/post/<%= post._id %>"><%= post.title %></a></li>
        <% }) %>
    </ul>
</body>
</html>
